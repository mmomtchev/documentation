{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "gdal-async",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [ 
                "build",
                "../node-gdal-async/src/node_gdal.cpp",
                "../node-gdal-async/lib/default_iterators.js",
                "--plugin=documentation-polyglot",
                "-f", "md", "-o", "gdal.md", "--config=../node-gdal-async/documentation.yaml"
            ],
            "program": "${workspaceFolder}/bin/documentation.js"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "test.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [ "--experimental-vm-modules" ],
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [ "__tests__/test.js" ]
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "bin.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--experimental-vm-modules"
            ],
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "__tests__/bin.js"
            ]
        }
    ]
}